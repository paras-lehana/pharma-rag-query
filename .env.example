# Pharmaceutical Compliance RAG Environment Configuration

# Application Settings
PATHWAY_HOST=127.0.0.1
PATHWAY_PORT=8000

# OpenAI API Configuration (if using OpenAI embeddings)
# OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration (for embedding models)
# HF_TOKEN=your_huggingface_token_here

# SharePoint Integration (optional)
# SHAREPOINT_URL=https://yourcompany.sharepoint.com/sites/regulatory
# SHAREPOINT_TENANT=yourcompany.onmicrosoft.com
# SHAREPOINT_CLIENT_ID=your_client_id
# SHAREPOINT_THUMBPRINT=your_certificate_thumbprint
# SHAREPOINT_ROOT=Regulatory Documents

# Google Drive Integration (optional)
# DRIVE_ID=your_google_drive_folder_id

# Database Configuration (if using external vector DB)
# VECTOR_DB_URL=your_vector_database_url
# VECTOR_DB_API_KEY=your_vector_db_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pharma-rag.log

# Cache Configuration
CACHE_ENABLED=true
CACHE_DIR=./cache

# Performance Tuning
MAX_CONCURRENT_REQUESTS=10
EMBEDDING_BATCH_SIZE=32
INDEX_REBUILD_INTERVAL=3600

# Security Settings
CORS_ORIGINS=*
API_KEY_REQUIRED=false
# API_KEY=your_api_key_for_authentication

# Document Processing Settings
MAX_FILE_SIZE_MB=100
SUPPORTED_EXTENSIONS=pdf,doc,docx,txt
AUTO_REINDEX=true
WATCH_DIRECTORY=true

# Pharmaceutical-Specific Settings
PRIORITY_DRUG_TERMS=banned,prohibited,schedule,controlled,drug,pharmaceutical
MIN_CONFIDENCE_SCORE=0.7
REGULATORY_KEYWORDS=gazette,notification,ministry,health,drug,ban